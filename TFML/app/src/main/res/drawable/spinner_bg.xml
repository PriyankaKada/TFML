<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>

                <shape>
                    <solid android:color="@color/white"/>

                    <stroke
                        android:width="1dp"
                        android:color="#777777"/>


                    <padding
                        android:left="5dp"
                        android:right="5dp"
                        />
                </shape>
            </item>

            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/spinner_dropdown"/>
            </item>
        </layer-list>
    </item>
</selector>