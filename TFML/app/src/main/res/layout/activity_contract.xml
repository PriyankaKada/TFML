<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contract"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tfml.activity.ContractActivity">

    <include
        android:id="@+id/upper"
        layout="@layout/toolbar_header_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_total_contract_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/total_lin_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/total_count_bg"
                android:text="25"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_terminated_contract_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/terminated_lin_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_terminated_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/terminated_count_bg"
                android:text="03"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_terminated_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminated"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_overdue_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/overdues_ling_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_overdue_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/overdues_count_bg"
                android:text="22"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_overdue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overdue"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whit_rect_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F26711"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Contract No : "
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="CNO154"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#F39C11"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="RC No. : "
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="CNO154"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/whit_rect_bg">

        <TextView
            android:id="@+id/txt_contract_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TATA Tiago"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_contract_name"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_downlod_data" />

        <TextView
            android:id="@+id/txt_next_due_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_contract_name"
            android:text="Next Due Date : "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_next_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_next_due_date_label"
            android:layout_toRightOf="@id/txt_next_due_date_label"
            android:text="25 jul 2016" />

        <TextView
            android:id="@+id/txt_current_emi_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/img_download"
            android:text="25,0000"
            />

        <TextView
            android:id="@+id/txt_current_emi_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_current_emi_amount"
            android:layout_toLeftOf="@id/txt_current_emi_amount"
            android:text="Current EMI : "
            android:textColor="@android:color/black" />

         <TextView
             android:id="@+id/txt_last_payment_label"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@id/txt_next_due_date_label"
             android:textColor="@android:color/black"
             android:text="Last Payment :"/>
        <TextView
            android:id="@+id/txt_last_payment_date"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/txt_last_payment_label"
            android:layout_below="@id/txt_next_due_date"
            android:text="25 jul 2016"/>

        <TextView
            android:id="@+id/txt_previous_emi"
            android:layout_below="@id/txt_current_emi_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="24,500"
            />
        <TextView
            android:id="@+id/txt_previous_emi_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="android:color/black"
            android:text="Previous EMI :"
            android:layout_toLeftOf="@+id/txt_previous_emi"
            android:layout_alignBottom="@+id/txt_previous_emi" />
        <View
            android:id="@+id/view_seprator"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_last_payment_date"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/txt_overdue_label"
            android:layout_width="wrap_content"
            android:layout_below="@+id/view_seprator"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Overdue : "/>
        <TextView
            android:id="@+id/txt_overdue_amount"
            android:layout_below="@id/view_seprator"
            android:layout_toRightOf="@id/txt_overdue_label"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="Rs.1,25,800"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_repayment_mode"
            android:layout_below="@+id/view_seprator"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text="NACH"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_repayment_mode_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignBottom="@+id/txt_repayment_mode"
            android:layout_toLeftOf="@+id/txt_repayment_mode"
            android:text="Repayment Mode :"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/lin_emi_button"
            android:layout_below="@id/txt_repayment_mode_label"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_pay_emi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay EMI"/>
            <Button
                android:id="@+id/btn_more_detail"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="More Details"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_Terminated_titel"
        android:layout_below="@+id/lin_emi_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terminated Contracts"
        android:textColor="@color/text_black"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/whit_rect_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F26711"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Contract No : "
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="CNO154"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="#F39C11"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="RC No. : "
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="CNO154"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tata Genx Nano"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminated on 12/06/2016"
            android:textSize="18sp"/>
    </LinearLayout>


</LinearLayout>
