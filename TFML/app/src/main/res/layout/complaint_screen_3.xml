                android:textSize="14sp"
                android:padding="8dp"
                />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtExpectedResolutionDate"
                android:text="Expected Resolution Date"
                android:textSize="14sp"
                android:padding="8dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtExpectedResolutionDateValue"
                android:text="10/11/2016  17:25:15"
                android:textSize="14sp"
                android:padding="8dp"
                />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

    </TableLayout>


</LinearLayout>