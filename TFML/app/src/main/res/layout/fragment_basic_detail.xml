<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_statement_of_accountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statement of Account as on- "
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txtStatement_of_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_statement_of_account_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="For the period of"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_agreement_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agreement no.:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_agreement_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_agreement_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agreement Date:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_agreement_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_maturity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maturity Date:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_maturity_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_tenure_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenure:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_tenure_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRCNoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RC No.:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txtRCNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_chasis_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chasis No.:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_chasis_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_engine_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engine No.:-"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_engine_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/lbl_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID:"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/txt_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
