<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tfml.fragment.EmiPatternFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <LinearLayout
          android:id="@+id/lin_contract_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/whit_rect_bg"
          android:orientation="horizontal"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="#F26711"
              android:orientation="horizontal"
              android:padding="10dp">

              <Spinner
                  android:id="@+id/sp_contract_no"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:textColor="@color/white" />

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="2dp"
              android:layout_weight="1"
              android:background="#F39C11"
              android:orientation="horizontal"
             >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:text="RC No. : "
                  android:padding="13dp"
                  android:textColor="@color/white" />

              <TextView
                  android:id="@+id/txt_rc_no"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:padding="13dp"
                  android:text="CNO154"
                  android:textColor="@color/white" />

          </LinearLayout>
      </LinearLayout>



</LinearLayout>
</RelativeLayout>