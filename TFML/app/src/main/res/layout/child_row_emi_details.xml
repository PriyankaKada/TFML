<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_row">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                />

            <TextView
                android:id="@+id/txtEmiInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,117.00"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principle"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                />

            <TextView
                android:id="@+id/txtEmiPrinciple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,083.00"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                />

            <TextView
                android:id="@+id/txtEmiInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O/S Principle "
            android:gravity="center"
            android:layout_margin="10dp"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            />

        <TextView
            android:id="@+id/txtEmiOsPrinciple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#11d911"
            android:text="0.00"/>

    </LinearLayout>

</LinearLayout>