<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_banner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_bg"
    tools:context="com.tfml.activity.BannerActivity">

    <include
        android:id="@+id/upper"
        layout="@layout/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/upper"
        android:padding="20dp"
        android:orientation="vertical"
        android:weightSum="3">

        <android.support.v4.view.ViewPager
            android:id="@+id/recentViewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="30dp"
            app:fillColor="@color/colorAccent"
            app:pageColor="@android:color/white"
            app:radius="4dp"
            app:strokeColor="@android:color/darker_gray" />

    </LinearLayout>


    <!-- <FrameLayout
         android:id="@+id/container"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="?attr/actionBarSize"
         android:layout_above="@+id/llBottom"/>-->
    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:id="@+id/linSchemes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSchemes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_scheme_non_selected" />

            <TextView
                android:id="@+id/txtSchemes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/schemes"
                android:textColor="#FFFFFF" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linApplyLoan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/linSchemes"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgApplyLoan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_apply_loan_non_selected" />

            <TextView
                android:id="@+id/txtApplyLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/apply_loan"
                android:textColor="#FFFFFF"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linReferFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/linApplyLoan"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgReferFriend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_refer_friends_non_selected" />

            <TextView
                android:id="@+id/txtReferFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/refer_friend"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLoanStaus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackground"
            android:layout_toRightOf="@+id/linReferFriend"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLoanStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_loan_status_non_selected" />

            <TextView
                android:id="@+id/txtLoanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/laon_status"
                android:textColor="#FFFFFF"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackground"
            android:layout_toRightOf="@+id/linLoanStaus"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_login_non_selected" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
    <!-- </LinearLayout>-->
</RelativeLayout>
