<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_banner"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.tfml.activity.BannerActivity">

    <include
        android:id="@+id/upper"
        layout="@layout/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_above="@+id/frame_banner"
        android:layout_below="@+id/upper"
        android:background="#FFFFFF"/>

    <FrameLayout
        android:id="@+id/frame_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/upper"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:weightSum="3">

        <android.support.v4.view.ViewPager
            android:id="@+id/recentViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>


        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="30dp"
            app:fillColor="@color/color_grey"
            app:pageColor="@android:color/white"
            app:radius="4dp"
            app:strokeColor="@android:color/darker_gray"/>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/tab_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linSchemes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="start"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSchemes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_scheme_non_selected"/>

            <TextView
                android:id="@+id/txtSchemes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/schemes"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linApplyLoan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/linSchemes"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgApplyLoan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_apply_loan_non_selected"/>

            <TextView
                android:id="@+id/txtApplyLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/apply_loan"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linReferFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/linApplyLoan"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgReferFriend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_refer_friends_non_selected"/>

            <TextView
                android:id="@+id/txtReferFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/refer_friend"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLoanStaus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/linReferFriend"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <View
                android:id="@+id/viewId"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/white"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imgLoanStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_loan_status_non_selected"/>

            <TextView
                android:id="@+id/txtLoanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/loan_status"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLogin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/linLoanStaus"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/logictab_icon"/>

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/txt_login"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
